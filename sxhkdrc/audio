# [warpd]

alt + w ; slash
 rofi -show window -kb-element-prev 'k' -kb-element-next 'j' -kb-accept-entry 'o'

alt + w ; I 
 rofi -show drun
# [mpc]

alt + q ; backslash ; m ; {r,R} 
 mpc repeat {on,off}	

alt + q ; backslash ; {s,S} 
 notify-send $(mpc single {on,off})	

alt + q ; backslash ; m ; p 
 mpc toggle	

alt + q ; backslash ; m ; c 
 notify-send "$(mpc current)" 

alt + q ; backslash ; m ; u 
 notify-send "$(mpc update)"

