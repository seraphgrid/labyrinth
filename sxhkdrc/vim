# labyrinth 0.1
# labyrinth is a modal interface overlay for widow. 

# [labyrinth]

shift + space
 labyrinth -v 

Super_L ; v
 sh labyrinth -V

a 
 sh labyrinth -a

Super_L ; n 
 sh labyrinth -n 

Super_L ; y
 sh labyrinth -s 

Super_L ; t
 sh labyrinth -t

Super_L ; x
 sh labyrinth -H 

Super_L ; w 
 sh labyrinth -I 

i 
 sh labyrinth -i 

Tab
 sh labyrinth -I 

Super_L ; c
 sh labyrinth -c 

# [wm]

L 
 slock

shift + grave
 dwmc setlayoutex {0,1}

space ; {1-9} 
 dwmc tagex {0-8}

space ; {g ; g,G}
 dwmc tagex {0,8}

{g ; g,G}
 dwmc viewex {0,8}

ctrl + w ; n 
 dwmc nametag

ctrl + w ; shift + 4 
 dwmc togglesticky

shift + grave
 dwmc togglemax

{1-9} 
 dwmc viewex {0-8}

{j,k}
 dwmc focusstack {+,-}1

shift + F8
 redshift {-O 2444,-x}

ctrl + w ; {j,k}
 dwmc rotatestack 1{+,-}

{J,K}
 dwmc {pushdown,pushup}

ctrl + {j,k}
 dwmc setcfact {+,-}0.45

equal
 dwmc setcfact 

{l,h}
 dwmc setmfact {+,-}0.05

z
 dwmc zoom

W 
 dwmc togglebar

c ; w
 dwmc killclient; \
 spmenu; \
 labyrinth -I

n
 dunstctl close-all

N 
 dunstctl history-pop

# kill windows. pleae. 

q 
 dwmc killclient

Q
 dwmc quit

d 
 python ~/cmdlaunch.py -n "pkill -f"

#r

x
 xkill

