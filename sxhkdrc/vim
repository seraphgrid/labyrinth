# intended for intricate user window management.
# [labyrinth]

Tab ; v
 sh ~/labyrinth -V

Tab ; a 
 sh ~/labyrinth -a 

Tab ; n 
 sh ~/labyrinth -n 

Tab ; y
 sh ~/labyrinth -s 

Tab ; t
 sh ~/labyrinth -t

Tab ; x
 sh ~/labyrinth -H 

Tab ; w 
 sh ~/labyrinth -I 

i 
 sh ~/labyrinth -I 

alt + Tab 
 sh ~/labyrinth -I 

Tab ; f
 sh ~/labyrinth -c 

# [wm]

space ; l  
 dwmc setlayoutex {0,1}

space ; {1-9} 
 dwmc tagex {0-9}

shift + space
 dwmc togglemax

{1-9} 
 dwmc view {0-9}

{j,k}
 dwmc focusstack {+,-}1

ctrl + {j,k}
 dwmc {pushdown,pushup}

n
 dunstctl close-all

N 
 dunstctl history-pop

{l,h}
 dwmc setmfact {+,-}0.05

{J,K}
 dwmc setcfact {+,-}0.45

equal
 dwmc setcfact 

o
 dwmc zoom

r 
 dwmc focusmaster

e
 dwmc zoom

W 
 dwmc togglebar

n
 dunstctl close-all

N 
 dunstctl history-pop

# kill windows. pleae. 
d 
 dwmc killclient

backslash ; q 
 dwmc quit

x 
 python ~/cmdlaunch.py -n "pkill -f"

# warpd

f
 hints

v
 hints -m scroll

# [menus]

slash 
 rofi -show window -kb-element-prev 'k' -kb-element-next 'j' -kb-accept-entry 'o'
 
I
 rofi -show drun

a
 spmenu

colon
 sh labyrinth -I && python ~/cmdlaunch.py "" && sh ~/labyrinth -v

# [config] 


backslash ; shift + slash
 st -e nvim ~/.config/sxhkd/vim   

shift + slash
 xterm -hold -e less ~/Documents/lbykeyz.txt

# [applications] 

q
 st 

backslash ; semicolon
 st -e $(xsel -b)

backslash ; m ; d
 sh labyrinth -I && python ~/cmdlaunch.py "mkdir -p" && sh labyrinth -v

backslash ; r ; d
 sh labyrinth -I && python ~/cmdlaunch.py "rmdir -p" && sh labyrinth -v

backslash ; p ; i
 sh labyrinth -I && python ~/cmdlaunch.py "sudo pacman -Syu" && sh labyrinth -v

backslash ; p ; I
 sh labyrinth -I && python ~/cmdlaunch.py "yay -S" && sh labyrinth -v 

backslash ; p ; q
 sh labyrinth -I && python ~/cmdlaunch.py "yay -Qs" && sh labyrinth -v

backslash ; p ; Q
 sh labyrinth -I && python ~/cmdlaunch.py "sudo pacman -Qs" && sh labyrinth -v

backslash ; w
 qutebrowser

backslash ; e
 sh ~/labyrinth -I && python ~/cmdlaunch.py -n "st -e $EDITOR" && sh labyrinth -v

backslash ; l 
 slock

